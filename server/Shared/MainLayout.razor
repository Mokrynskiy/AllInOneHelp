@inherits AllInOneHelp.Layouts.MainLayoutComponent

@using Radzen
@using Radzen.Blazor
<RadzenDialog />
<RadzenNotification />

<RadzenHeader>
  <ChildContent>
    <div class="row justify-content-start align-items-center">
      <div class="col-md-6 d-flex align-items-center">
        <RadzenSidebarToggle Click="@SidebarToggle0Click">
        </RadzenSidebarToggle>
        <RadzenLabel Text="AllInOneHelp">
        </RadzenLabel>
      </div>
      <div class="col-md-6 text-lg-right">
      </div>
    </div>
  </ChildContent>
</RadzenHeader>
<RadzenBody @ref="body0">
  <ChildContent>
    <RadzenContentContainer Name="main">
    @Body
    </RadzenContentContainer>
  </ChildContent>
</RadzenBody>
<RadzenSidebar @ref="sidebar0">
  <ChildContent>
    <RadzenPanelMenu style="height: 100%">
        <ChildContent>
            <RadzenPanelMenuItem Icon="home" Path="/" Text="Домашняя страница">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="school" Text="Справка">
                <ChildContent>
                    <RadzenPanelMenuItem Path="/reference" Text="Информация">
                    </RadzenPanelMenuItem>
                </ChildContent>
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="functions" Text="Расчеты">
                <ChildContent>
                    <RadzenPanelMenuItem Path="paralel-resistor-calc" Text="Паралельные резисторы">
                    </RadzenPanelMenuItem>
                    <RadzenPanelMenuItem Path="resistor-color-code" Text="Цветовая кодировка резисторов">
                    </RadzenPanelMenuItem>                   
                </ChildContent>
            </RadzenPanelMenuItem>
        </ChildContent>
    </RadzenPanelMenu>
  </ChildContent>
</RadzenSidebar>
<RadzenFooter>
  <ChildContent>
    <RadzenLabel Text="AllInOneHelp, Copyright Ⓒ 2020">
    </RadzenLabel>
  </ChildContent>
</RadzenFooter>
